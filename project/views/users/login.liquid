{% layout 'layout.liquid' %}

{% block content %}
    <div class="container md">
        <form action="/users/login" method="POST">
            <fieldset>
                <legend>Welcome back, please log in here</legend>
                <label class="form-label">Username:</label>
                <input 
                    type="text" 
                    name="username" 
                    class="form-control"
                    autocomplete="off"
                >
                <label class="form-label">Password:</label>
                <input 
                    type="password" 
                    name="password" 
                    class="form-control"
                    autocomplete="off"
                >
            </fieldset>
            <input 
                type="submit" 
                value="Log In" 
                class="btn btn-success"
            >
        </form>
    </div>
{% endblock %}
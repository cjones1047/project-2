        <input 
            type="text" 
            name="stockSymbol" 
            placeholder="Ticker of stock to add..." 
            class="form-control"
            style="width: fit-content; height: 38px; margin: 10px;"
            required>
        <input 
            type="number" 
            name="numberOfShares" 
            placeholder="# of Shares to Add" 
            class="form-control"
            min="1"
            style="width: fit-content; height: 38px; margin: 10px;"
            required>
        <div class="btn-group" style="width: fit-content; margin: 10px;">
            <input type="submit" value="Add To Portfolio" class="btn btn-secondary">
        </div>
    </form>

    {% if portfolio.allocations.length > 0 %}
        <div class="col justify-content-center">
            <div class="list-group row" style="max-width: 500px;">
                {% for allocation in portfolio.allocations %}
                    <button type="button" class="list-group-item list-group-item-action">{{allocation.numberOfShares}} shares of {{allocation.stockSymbol}}</button>
                {% endfor %}
            </div>
        </div>
